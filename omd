def step1():
    print(
        '–£—Ç–∫–∞-–º–∞–ª—è—Ä ü¶Ü —Ä–µ—à–∏–ª–∞ –≤—ã–ø–∏—Ç—å –∑–∞–π—Ç–∏ –≤ –±–∞—Ä. '
        '–í–∑—è—Ç—å –µ–π –∑–æ–Ω—Ç–∏–∫? ‚òÇÔ∏è'
    )
    option = ''
    options = {'–¥–∞': True, '–Ω–µ—Ç': False}
    while option not in options:
        print('–í—ã–±–µ—Ä–∏—Ç–µ: {}/{}'.format(*options))
        option = input()

    if options[option]:
        return step2_umbrella()
    return step2_no_umbrella()



def step2_umbrella():
    print(
        '–î–æ–∂–¥—å —Ç–∞–∫ –∏ –Ω–µ –Ω–∞—á–∞–ª—Å—è. –£—Ç–∫–∞-–º–∞–ª—è—Ä –±–µ–∑ –ø—Ä–æ–∏—Å—à–µ—Å—Ç–≤–∏–π –¥–æ—à–ª–∞ –¥–æ –±–∞—Ä–∞. '
        '–û–Ω–∞ –≤—ã–ø–∏–ª–∞ –ø–∞—Ä—É —à–æ—Ç–æ–≤ ü•É –∏ –∑–∞–±—ã–ª–∞ –∑–æ–Ω—Ç–∏–∫ –Ω–∞ –±–∞—Ä–Ω–æ–π —Å—Ç–æ–π–∫–µ ü§¶‚Äç‚ôÄÔ∏è'
    )


def step2_no_umbrella():
    print(
        '–ù–∞—á–∞–ª—Å—è —É–∂–∞—Å–Ω—ã–π –ª–∏–≤–µ–Ω—å. –£—Ç–∫–∞-–º–∞–ª—è—Ä –ø—Ä–æ–º–æ–∫–ª–∞ –¥–æ –Ω–∏—Ç–∫–∏, '
        '–µ–ª–µ –¥–æ—à–ª–∞ –¥–æ –±–∞—Ä–∞ –∏ –∑–∞–∫–∞–∑–∞–ª–∞ –≥–ª–∏–Ω—Ç–≤–µ–π–Ω, —á—Ç–æ–±—ã —Å–æ–≥—Ä–µ—Ç—å—Å—è. '
        '–î–æ–∂–¥—å –Ω–µ –ø—Ä–µ–∫—Ä–∞—â–∞–ª—Å—è, –∏ –æ–Ω–∞ –æ—Å—Ç–∞–ª–∞—Å—å –Ω–æ—á–µ–≤–∞—Ç—å –≤ –±–∞—Ä–µ üòî'
    )





if __name__ == '__main__':
    step1()
